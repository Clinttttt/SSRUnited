@page "/"
@using SSRUnited.Shared.Dtos
@using SSRUnited.Shared.Interface
@inject IIRespository repository

@rendermode @(new InteractiveServerRenderMode( prerender: false))

<PageTitle>Redis Caching Test</PageTitle>

<div class="container">
    <div class="header">
        <h1>🚀 Redis Caching Test</h1>
        <p>Test your distributed cache implementation</p>
    </div>

    <!-- Create Form -->
    <div class="card">
        <h3>Add New Human</h3>
        <div class="form-group">
            <input @bind="newHuman.name" placeholder="Enter name" class="input" />
            <input @bind="newHuman.content" placeholder="Enter content" class="input" />
            <button @onclick="CreateHuman" class="btn btn-primary">Add Human</button>
        </div>
    </div>

    <!-- Stats -->
    <div class="stats">
        <div class="stat-card">
            <div class="stat-value">@humans.Count</div>
            <div class="stat-label">Total Records</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@(isCached ? "✅" : "❌")</div>
            <div class="stat-label">Cache Status</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@loadTime ms</div>
            <div class="stat-label">Load Time</div>
        </div>
    </div>

    <!-- Actions -->
    <div class="actions">
        <button @onclick="LoadData" class="btn btn-success">🔄 Refresh Data</button>
        <button @onclick="LoadData" class="btn btn-info">⚡ Test Cache Speed</button>
    </div>

    <!-- Data List -->
    <div class="card">
        <h3>Human List (Check console for cache hit/miss)</h3>

        @if (isLoading)
        {
            <div class="loading">Loading...</div>
        }
        else if (humans.Any())
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Content</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var human in humans)
                        {
                            <tr>
                                <td>@human.Id</td>
                                <td>
                                    @if (editingId == human.Id)
                                    {
                                        <input @bind="editHuman.name" class="input-small" />
                                    }
                                    else
                                    {
                                        @human.name
                                    }
                                </td>
                                <td>
                                    @if (editingId == human.Id)
                                    {
                                        <input @bind="editHuman.content" class="input-small" />
                                    }
                                    else
                                    {
                                        @human.content
                                    }
                                </td>
                                <td>@human.created_at.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (editingId == human.Id)
                                    {
                                        <button @onclick="() => SaveEdit(human.Id)" class="btn-small btn-success">Save</button>
                                        <button @onclick="CancelEdit" class="btn-small btn-secondary">Cancel</button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => StartEdit(human)" class="btn-small btn-warning">Edit</button>
                                        <button @onclick="() => DeleteHuman(human.Id)" class="btn-small btn-danger">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>No data found. Add some records to test caching!</p>
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-error" : "alert-success")">
            @message
        </div>
    }
</div>

