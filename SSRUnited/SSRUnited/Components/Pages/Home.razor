@code {
    private List<HumanDto> humans = new();
    private HumanDto newHuman = new();
    private HumanDto editHuman = new();
    private int? editingId = null;
    private bool isLoading = false;
    private bool isCached = false;
    private long loadTime = 0;
    private string message = "";
    private bool isError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        var sw = System.Diagnostics.Stopwatch.StartNew();

        try
        {
            var request  = await repository.Listing();
            if(request.value is not null)
            humans = request.value;
            sw.Stop();
            loadTime = sw.ElapsedMilliseconds;

            // Check if it was likely from cache (very fast = cached)
            isCached = loadTime < 50;

            Console.WriteLine($"Data loaded in {loadTime}ms - {(isCached ? "FROM CACHE" : "FROM DATABASE")}");
            ShowMessage($"Data loaded in {loadTime}ms {(isCached ? "⚡ (Cached)" : "🗄️ (Database)")}", false);
        }
        catch (Exception ex)
        {
            ShowMessage($"Error loading data: {ex.Message}", true);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateHuman()
    {
        if (string.IsNullOrWhiteSpace(newHuman.name) || string.IsNullOrWhiteSpace(newHuman.content))
        {
            ShowMessage("Please fill in both name and content", true);
            return;
        }

        try
        {
            await repository.CreateAsync(newHuman);
            ShowMessage("Human created successfully! Cache cleared.", false);
            newHuman = new HumanDto();
            await LoadData();
        }
        catch (Exception ex)
        {
            ShowMessage($"Error creating human: {ex.Message}", true);
        }
    }

    private void StartEdit(HumanDto human)
    {
        editingId = human.Id;
        editHuman = new HumanDto
        {
            Id = human.Id,
            name = human.name,
            content = human.content
        };
    }

    private async Task SaveEdit(int id)
    {
        try
        {
            var success = await repository.Update(editHuman);
            if (success.is_success)
            {
                ShowMessage("Human updated successfully! Cache cleared.", false);
                editingId = null;
                await LoadData();
            }
            else
            {
                ShowMessage("Failed to update human", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error updating human: {ex.Message}", true);
        }
    }

    private void CancelEdit()
    {
        editingId = null;
        editHuman = new HumanDto();
    }

    private async Task DeleteHuman(int id)
    {
        try
        {
            var success = await repository.Delete(id);
            if (success.is_success)
            {
                ShowMessage("Human deleted successfully! Cache cleared.", false);
                await LoadData();
            }
            else
            {
                ShowMessage("Failed to delete human", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error deleting human: {ex.Message}", true);
        }
    }

    private void ShowMessage(string msg, bool error)
    {
        message = msg;
        isError = error;

        // Auto-clear message after 3 seconds
        Task.Delay(3000).ContinueWith(_ =>
        {
            message = "";
            InvokeAsync(StateHasChanged);
        });
    }
}
